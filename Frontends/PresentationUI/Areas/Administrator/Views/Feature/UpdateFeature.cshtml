@model FeatureViewModel

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Özellik Güncelle</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Özellikler</a></li>
                    <li class="breadcrumb-item active">Özellik Güncelle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="txt-feature">Özellik Adı</label>
                                <input class="form-control" id="txt-feature" value="@Model.GetFeatureDto.FeatureName" asp-for="UpdateFeatureDto.FeatureName" placeholder="Özellik Adı Giriniz" />
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.GetFeatureDto.FeatureID" asp-for="UpdateFeatureDto.FeatureID" />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

