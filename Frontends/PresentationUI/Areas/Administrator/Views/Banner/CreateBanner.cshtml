@model CreateBannerDto

@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Yeni Banner Oluştur</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Banner</a></li>
                    <li class="breadcrumb-item active">Yeni Banner Oluştur</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-banner-title">Başlık</label>
                                <input class="form-control" id="txt-banner-title" asp-for="Title" placeholder="Başlık Giriniz" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-banner-image">Görsel</label>
                                <input class="form-control" id="txt-banner-image" asp-for="Image" placeholder="Gösel Seçiniz" />
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="txt-description">Görsel</label>
                                <input class="form-control" id="txt-description" asp-for="Description" placeholder="Açıklama Giriniz" />
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Yeni Banner Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>

