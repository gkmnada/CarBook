@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Hakkımızda Bilgisi Oluştur</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Hakkımızda</a></li>
                    <li class="breadcrumb-item active">Hakkımızda Bilgisi Oluştur</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-about-title">Başlık</label>
                                <input class="form-control" id="txt-about-title" asp-for="Title" placeholder="Başlık Giriniz" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-about-image">Resim</label>
                                <input class="form-control" id="txt-about-image" asp-for="Image" placeholder="Hakkımızda Resmi Seçiniz" />
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="txt-about-content">Açıklama</label>
                                <textarea class="form-control" id="txt-about-content" asp-for="Description" placeholder="Hakkımızda İçeriği Giriniz" rows="3"></textarea>
                                <small class="form-text text-muted">Lütfen hakkımızda içeriğini HTML formatında oluşturunuz.</small>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımızda Bilgisi Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>

