@model FooterViewModel

@{
    ViewData["Title"] = "UpdateFooter";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Footer Güncelle</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Footer</a></li>
                    <li class="breadcrumb-item active">Footer Güncelle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-description">Açıklama</label>
                                <input class="form-control" id="txt-description" value="@Model.GetFooterDto.Description" asp-for="UpdateFooterDto.Description" placeholder="Açıklama Giriniz" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-address">Adres</label>
                                <input class="form-control" id="txt-address" value="@Model.GetFooterDto.Address" asp-for="UpdateFooterDto.Address" placeholder="Adres Giriniz" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-phone">Açıklama</label>
                                <input class="form-control" id="txt-phone" value="@Model.GetFooterDto.Phone" asp-for="UpdateFooterDto.Phone" placeholder="Telefon Giriniz" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-email">E-Posta</label>
                                <input class="form-control" id="txt-email" value="@Model.GetFooterDto.Email" asp-for="UpdateFooterDto.Email" placeholder="E-Posta Adresi Giriniz" />
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.GetFooterDto.FooterID" asp-for="UpdateFooterDto.FooterID" />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

