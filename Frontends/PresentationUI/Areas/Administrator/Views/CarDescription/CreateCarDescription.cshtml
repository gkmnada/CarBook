@model CreateCarDescriptionDto

@{
    ViewData["Title"] = "CreateCarDescription";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Yeni Açıklama Oluştur</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Araçlar</a></li>
                    <li class="breadcrumb-item">Araç Listesi</li>
                    <li class="breadcrumb-item active">Yeni Açıklama Oluştur</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="txt-description">Açıklama</label>
                                <textarea class="form-control" id="txt-description" asp-for="Description" placeholder="Açıklama Giriniz" rows="4"></textarea>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@ViewBag.CarId" asp-for="CarID" />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>

