@model CreateCarPricingDto

@{
    ViewData["Title"] = "CreateCarPricing";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Araç Fiyat Girişi</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Araçlar</a></li>
                    <li class="breadcrumb-item active">Araç Fiyat Girişi</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="select-cars">Araç</label>
                                <select class="form-control" id="select-cars" asp-items="@ViewBag.Cars" asp-for="CarID">
                                    <option value="Araç Seçilmedi">Araç Seçiniz</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="select-period">Ödeme Periyodu</label>
                                <select class="form-control" id="select-period" asp-items="@ViewBag.Pricing" asp-for="PricingID">
                                    <option value="Ödeme Periyodu Seçilmedi">Ödeme Periyodu Seçiniz</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="txt-amount">Fiyat</label>
                                <input type="text" class="form-control" id="txt-amount" asp-for="Amount" placeholder="Fiyat Giriniz" />
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

