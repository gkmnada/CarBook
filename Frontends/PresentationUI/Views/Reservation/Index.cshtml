@model CreateReservationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/carbook-master/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Ana Sayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Rezervasyon <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Aracınız İçin Rezervasyon Oluşturun</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 block-9 mb-md-5">
                <form class="bg-light p-5 contact-form" method="post">
                    <div class="row">
                        <input type="hidden" asp-for="CarID" value="@ViewBag.CarID" />
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Adınız</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Adınızı Girin">
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Soyadınız</label>
                                <input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınızı Girin">
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Mail Adresiniz</label>
                                <input type="text" class="form-control" asp-for="Email" placeholder="Mail Adresinizi Girin">
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Telefon Numaranız</label>
                                <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numaranızı Girin">
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Alış Noktası</label>
                                <select class="custom-select" asp-items="@ViewBag.Location" asp-for="PickUpLocationID">
                                    <option>Alış Noktası Seçin</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Teslim Noktası</label>
                                <select class="custom-select" asp-items="@ViewBag.Location" asp-for="DropOffLocationID">
                                    <option>Teslim Noktası Seçin</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Yaşınız</label>
                                <input type="text" class="form-control" asp-for="Age" placeholder="Yaşınızı Girin">
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Ehliyet Yılınız</label>
                                <input type="text" class="form-control" asp-for="DriverLicenseYear" placeholder="Ehliyet Yılınızı Girin">
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-label">Notunuz</label>
                                <textarea class="form-control" asp-for="Description" placeholder="Varsa Eklemek İstedikleriniz Girin" cols="30" rows="7"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Oluştur" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

