@model List<ResultCarFeatureDto>

<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
    <div class="row">
        @for (int i = 0; i < Model.Count / 5; i++)
        {
            <div class="col-md-4">
                <ul class="features">
                    @for (int x = i * 5; x < ((i + 1) * 5); x++)
                    {
                        <li class="@(Model[x].Available?"check":"remove")"><span class="ion-ios-@(Model[x].Available?"checkmark":"close")"></span>@Model[x].FeatureName</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
