@model List<ResultCarPricingWithCarDto>

@{
    var index = new int[] { 1, 2, 4, 5, 6 };
    var counter = 0;
}

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Tekliflerimiz</span>
                <h2 class="mb-2">Öne Çıkan Araçlarımız</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">
                    @foreach (var item in Model)
                    {
                        if (index.Contains(counter))
                        {
                            <div class="item">
                                <div class="car-wrap rounded ftco-animate">
                                    <div class="img rounded d-flex align-items-end" style="background-image: url(@item.Image);">
                                    </div>
                                    <div class="text">
                                        <h2 class="mb-0"><a href="#">@item.Model</a></h2>
                                        <div class="d-flex mb-3">
                                            <span class="cat">@item.BrandName</span>
                                            <p class="price ml-auto">₺@Convert.ToDecimal(item.Amount).ToString("#,##0") <span>/ Günlük</span></p>
                                        </div>
                                        <p class="d-flex mb-0 d-block"><a href="/Reservation/Index?id=@item.CarID" class="btn btn-primary py-2 mr-1">Şimdi Kirala</a> <a href="/CarDetail/Index?id=@item.CarID" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
                                    </div>
                                </div>
                            </div>
                        }

                        counter++;
                    }
                </div>
            </div>
        </div>
    </div>
</section>